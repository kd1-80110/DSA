package com.sunbeam;

public class BubbleSort {
	public static void bubbleSort(int arr[],int N) {
		int count=0;
		int passes=0;
		int flag;
		
		for(int i=1;i<N;i++) {
			passes++;
			flag=0;
			for(int j=0;j<N-1;j++) {
				count++;
				if(arr[j]>arr[j+1]) {
					int temp=arr[j];
					arr[j]=arr[j+1];
					arr[j+1]=temp;
					flag=1;
				}
			}
			if(flag==0)
				
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
